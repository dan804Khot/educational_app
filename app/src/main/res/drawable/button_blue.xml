<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#3366FF"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="90"
                android:startColor="#3366FF"
                android:endColor="#99CCFF"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
</selector>
