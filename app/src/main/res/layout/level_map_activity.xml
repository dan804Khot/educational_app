<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Фон  -->

    <!-- Прогресс слева сверху -->
    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_level_map" />

    <!-- Название мира -->
    <TextView
        android:id="@+id/progress_text"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/circle_purple"
        android:gravity="center"
        android:text="1/5"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/world_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/progress_text"
        android:background="@drawable/rounded_white"
        android:enabled="false"
        android:minHeight="48dp"
        android:text="Мир дисциплины"
        android:textAlignment="center"
        android:textStyle="bold" />

    <!-- Кнопка назад -->


    <!-- Кнопки уровней -->

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/button_back"
        android:contentDescription="Назад"
        tools:ignore="TouchTargetSizeCheck" />

    <FrameLayout
        android:id="@+id/level1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_marginStart="270dp">

        <ImageView
            android:id="@+id/level1_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/green_level_check" />

        <TextView
            android:id="@+id/level1_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:layout_marginTop="10dp"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="3"
            android:text="1"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/level2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="140dp"
        android:layout_marginStart="80dp">

        <ImageView
            android:id="@+id/level2_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/green_level_check" />

        <TextView
            android:id="@+id/level2_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:layout_marginTop="10dp"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="3"
            android:text="2"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/level3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="180dp"
        android:layout_marginStart="280dp">

        <ImageView
            android:id="@+id/level3_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/red_check" />

        <TextView
            android:id="@+id/level3_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:layout_marginTop="10dp"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="3"
            android:text="3"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/level4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="250dp"
        android:layout_marginStart="60dp">

        <ImageView
            android:id="@+id/level4_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/red_check" />

        <TextView
            android:id="@+id/level4_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:layout_marginTop="10dp"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="3"
            android:text="4"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/level5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="340dp"
        android:layout_marginStart="240dp">

        <ImageView
            android:id="@+id/level5_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/red_check" />

        <TextView
            android:id="@+id/level5_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:layout_marginTop="10dp"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="3"
            android:text="5"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />
    </FrameLayout>

    <!-- Котики -->

    <!-- Кнопки Рейтинг и Прогресс -->


    <ImageView
        android:id="@+id/cat1"
        android:layout_width="94dp"
        android:layout_height="124dp"
        android:layout_below="@id/level3"
        android:layout_alignEnd="@id/level3"
        android:layout_marginTop="-344dp"
        android:layout_marginEnd="-9dp"
        android:src="@drawable/cat_image" />

    <ImageView
        android:id="@+id/cat2"
        android:layout_width="102dp"
        android:layout_height="130dp"
        android:layout_below="@id/level3"
        android:layout_alignEnd="@id/level3"
        android:layout_marginTop="-239dp"
        android:layout_marginEnd="-63dp"
        android:src="@drawable/cat_teacher" />

    <LinearLayout
        android:id="@+id/footer_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/rating_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Рейтинг"
            android:background="@drawable/button_purple"
            android:textColor="@android:color/white"
            android:layout_marginEnd="20dp" />

        <Button
            android:id="@+id/progress_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Прогресс"
            android:background="@drawable/button_purple"
            android:textColor="@android:color/white" />
    </LinearLayout>

</RelativeLayout>
