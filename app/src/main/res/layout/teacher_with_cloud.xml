<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <TextView
        android:id="@+id/speechBubble"
        android:layout_width="256dp"
        android:layout_height="114dp"
        android:background="@drawable/speech_bubble"
        android:padding="12dp"
        android:text="Информация о преподавателе и о предмете"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="138dp"/>

    <ImageView
        android:id="@+id/teacherCat"
        android:layout_width="302dp"
        android:layout_height="294dp"
        android:contentDescription="Учитель-кот"
        android:src="@drawable/cat_teacher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/speechBubble"
        android:layout_marginStart="69dp"
        android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>