<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <!-- Облачко с текстом -->
    <TextView
        android:id="@+id/speechBubble"
        android:layout_width="256dp"
        android:layout_height="114dp"
        android:background="@drawable/speech_bubble"
        android:padding="12dp"
        android:text="Информация о преподавателе и о предмете"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="138dp" />

    <!-- Кнопка под облачком -->
    <Button
        android:id="@+id/negativeBranchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_dark_button"
        android:text="Ветка отрицательного развития"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        android:paddingHorizontal="4dp"
        android:paddingVertical="4dp"
        app:layout_constraintStart_toStartOf="@id/speechBubble"
        app:layout_constraintTop_toBottomOf="@id/speechBubble" />

    <!-- Изображение учителя-кота -->
    <ImageView
        android:id="@+id/teacherCat"
        android:layout_width="302dp"
        android:layout_height="294dp"
        android:contentDescription="Учитель-кот"
        android:src="@drawable/cat_teacher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/negativeBranchButton"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="233dp" />

</androidx.constraintlayout.widget.ConstraintLayout>