<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/statistic_background">

    <!-- Центрированный блок статистики -->
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/small_statisctic_background"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <!-- Заголовок -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Статистика"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="#C800A1"
            android:padding="8dp"
            android:background="@drawable/rounded_title_background"
            android:gravity="center" />

        <!-- Поля статистики -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID пользователя: ID"
            android:background="@drawable/rounded_stat_field"
            android:padding="10dp"
            android:textColor="#000000"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Имя пользователя: ИМЯ"
            android:background="@drawable/rounded_stat_field"
            android:padding="10dp"
            android:textColor="#000000"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Группа: ГРУППА"
            android:background="@drawable/rounded_stat_field"
            android:padding="10dp"
            android:textColor="#000000"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Количество пройденных уровней: КОЛИЧЕСТВО"
            android:background="@drawable/rounded_stat_field"
            android:padding="10dp"
            android:textColor="#000000"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Текущий уровень: УРОВЕНЬ"
            android:background="@drawable/rounded_stat_field"
            android:padding="10dp"
            android:textColor="#000000"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Текущий мир дисциплины: МИР"
            android:background="@drawable/rounded_stat_field"
            android:padding="10dp"
            android:textColor="#000000"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Список в рейтинге: МЕСТО"
            android:background="@drawable/rounded_stat_field"
            android:padding="10dp"
            android:textColor="#000000"
            android:layout_marginTop="8dp" />

        <!-- Кнопка "Обо мне" -->
        <Button
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:text="Обо мне"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_dark_button"
            android:layout_marginTop="24dp"
            android:elevation="8dp" />
    </LinearLayout>

    <!-- Кнопка назад -->
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_back"
        android:contentDescription="Назад"
        tools:ignore="TouchTargetSizeCheck" />
</RelativeLayout>